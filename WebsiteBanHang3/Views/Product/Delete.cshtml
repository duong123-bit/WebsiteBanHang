@model WebsiteBanHang3.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">Delete Product</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="alert alert-warning" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete the product <strong>@Model.Name</strong>?
                </div>

                <div class="d-flex justify-content-between">
                    <!-- Delete Button -->
                    <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                    <!-- Cancel Button -->
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary btn-lg">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
