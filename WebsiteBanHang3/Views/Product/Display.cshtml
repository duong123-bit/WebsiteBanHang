@model WebsiteBanHang3.Models.Product

<div class="container mt-5">
    <h2 class="text-center">@Model.Name</h2>

    <!-- Product Detail Card -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h3 class="card-title text-success">Price: @Model.Price</h3>

            <!-- Product Description -->
            <p class="card-text">@Model.Description</p>

            <!-- Product Image -->
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="text-center">
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid" style="max-width: 300px;" />
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>
