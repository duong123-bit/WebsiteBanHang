@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

<h2 class="text-center mb-4">Role Management</h2>

<div class="mb-3 text-right">
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Create New Role</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>NormalizedName</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityRole i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>@i.NormalizedName</td>
                <td>
                    <a asp-action="Display" asp-controller="Role" asp-area="Admin" asp-route-id="@i.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i> View</a>
                    <a asp-action="Update" asp-controller="Role" asp-area="Admin" asp-route-id="@i.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-action="Delete" asp-controller="Role" asp-area="Admin" asp-route-id="@i.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
