@model WebsiteBanHang3.Models.Product

<div class="container my-5">
    <h2 class="text-center mb-4">@Model.Name</h2>

    <div class="row">
        <!-- Product Image Section -->
        <div class="col-md-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded shadow" style="max-width: 100%;" />
            }
            else
            {
                <img src="~/images/default-product.jpg" alt="Product Image" class="img-fluid rounded shadow" style="max-width: 100%;" />
            }
        </div>

        <!-- Product Details Section -->
        <div class="col-md-6">
            <div class="product-details">
                <h3 class="text-primary">Price: @Model.Price</h3>
                <p class="lead">@Model.Description</p>

                <div class="d-flex justify-content-start mt-4">
                    <a asp-action="Index" class="btn btn-secondary btn-lg me-3">Back to List</a>
                    <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">Edit Product</a>
                </div>
            </div>
        </div>
    </div>
</div>
