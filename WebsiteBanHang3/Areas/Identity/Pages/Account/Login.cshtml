@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!-- Login Form Container -->
<div class="container mt-5">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <!-- Form -->
            <section>
                <form id="account" method="post" class="shadow-lg p-4 rounded border">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <!-- Email Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Password Input -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                    </div>

                    <!-- Log in Button -->
                    <div>
                        <button type="submit" class="w-100 btn btn-primary btn-lg shadow-sm">Log in</button>
                    </div>

                    <!-- Links: Forgot Password, Register, Resend Confirmation -->
                    <div class="mt-3 text-center">
                        <p><a asp-page="./ForgotPassword" class="text-decoration-none text-primary">Forgot your password?</a></p>
                        <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none text-success">Register as a new user</a></p>
                        <p><a asp-page="./ResendEmailConfirmation" class="text-decoration-none text-info">Resend email confirmation</a></p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
